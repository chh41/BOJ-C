#include<stdio.h>

int main(void)
{
    
    int a;

    scanf("%d", &a);

    for (int i=1;i<=a;i++)
    {
        for (int k = a-i; k != 0; k--)
        {
            printf(" ");
        }
        for (int j = i; j!=0; j--)
        {
            printf("*");
        }
        printf("\n");
    }
}
